@{
    ViewData["Title"] = "About";
}
<body style="background-color:grey;">
    <div class="container" style="padding:20px; margin-top:20px; background-color:white; border-radius:20rem;">
        <div class="row justify-content-center">
            <img class="img" src="~/images/Under Construction Material icon.png" style="height:10rem" alt="Card image cap">
        </div>
        <div class="row justify-content-center">
            <div class="under col-8 text-center" style="margin-bottom:2rem">
                <h1 class="badge badge-pill badge-warning" style="text-transform:uppercase; font-size:3rem">under construction</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="progress" style="height:2rem; border: 2px black solid;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width:25%; color:black; font-weight:bold; font-size:1rem" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">LOADING 25%</div>
                </div>
            </div>
        </div>
    </div>
</body>
