@{
    ViewData["Title"] = "About";
}
<body style="background-color:grey;">
    <div class="container" style="background-color:transparent">
        <div class="row justify-content-center">
            <img class="img" src="~/images/Under Construction Material icon.png" style="height:10rem" alt="Card image cap">
        </div>
        <div class="row justify-content-center">
            <div class="col-12 text-center" style="margin-bottom:2rem">
                <h1 class="display-3" style="text-transform:uppercase; font-size:3rem">under construction</h1>
            </div>
        </div>
        <div class="row justify-content-center">
                <div class="progress mb-3 col-6" style="height:2rem; padding:0px; border: 2px black solid;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width:25%; color:black; font-weight:bold; font-size:1rem" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
        </div>
        <div class="row justify-content-center">
            <a asp-action="Index" asp-controller="Home"><button class="btn btn-warning">BACK</button></a>
        </div>
    </div>
</body>
